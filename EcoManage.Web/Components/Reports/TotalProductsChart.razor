@inherits TotalProductsChartComponent

@if (Data.Count > 0)
{
    <MudChart ChartType="ChartType.Pie"
              InputData="@Data.ToArray()"
              InputLabels="@Labels.ToArray()"
              Width="100%"
              Height="450px"/>
}
@if (Data.Count == 0)
{
    <MudText Color="Color.Primary">Não há dados para serem exibidos.</MudText>
}
else
{
    <div class="d-flex align-center justify-center" style="height: 350px">
        <MudProgressCircular Indeterminate="true" Color="Color.Primary"></MudProgressCircular>
    </div> 
}