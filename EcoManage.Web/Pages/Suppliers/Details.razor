@page "/fornecedores/{id}"
@inherits DetailsSupplierPage

<MudPaper Class="pa-8 mt-4 mb-2">

    <MudText Class="d-flex justify-center" Typo="Typo.h5">
         @Supplier?.Data?.CompanyName
    </MudText>
    
    <MudDivider Class="my-6"/>
    <MudForm>
        
        <MudText Class="pa-1" Typo="Typo.h6">Dados:</MudText>

        <MudTextField Class="mb-2 pa-2" T="string" ReadOnly="true" Variant="Variant.Outlined" Label="ID" Mask="@(new PatternMask("00.000.000/0000-00"))" Value="(Supplier?.Data?.Id).ToString()"/>
        <MudTextField Class="mb-2 pa-2" T="string" ReadOnly="true" Variant="Variant.Outlined" Label="CNPJ" Mask="@(new PatternMask("00.000.000/0000-00"))" Value="Supplier?.Data?.Document.Number"/>
        
        <MudDivider Class="my-4"/>
        
        <MudText Class="pa-1" Typo="Typo.h6">Endere√ßo:</MudText>
        <MudTextField Class="mb-2 pa-2" ReadOnly="true" Value="Supplier?.Data?.Address.Street" Variant="Variant.Outlined" Label="Rua"/>
        <MudTextField Class="mb-2 pa-2" ReadOnly="true" Value="Supplier?.Data?.Address.Number" Variant="Variant.Outlined" Label="Numero"/>
        <MudTextField Class="mb-2 pa-2" ReadOnly="true" Variant="Variant.Outlined" Label="CEP" Mask="@(new PatternMask("00000-000"))" Value="Supplier?.Data?.ZipCode.Code"/>
        
        <MudDivider Class="my-4"/>
        
        <MudText Class="pa-1" Typo="Typo.h6">Contato:</MudText>
        <MudTextField Class="mb-2 pa-2" ReadOnly="true" Variant="Variant.Outlined" Label="E-mail" Value="Supplier?.Data?.Email"/>
        <MudTextField Class="mb-2 pa-2" ReadOnly="true" Variant="Variant.Outlined" Label="Contato" Lines="3" Value="Supplier?.Data?.Contact"/>

    </MudForm>

</MudPaper>