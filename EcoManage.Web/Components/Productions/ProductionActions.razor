@inherits ProductionActionsComponent

@switch (Production.Status)
{
    case EProductionStatus.Planting:
        <MudButton Class="mb-4" Size="Size.Large" EndIcon="@Icons.Material.TwoTone.NextPlan" FullWidth="true" Color="Color.Info" Variant="Variant.Outlined" OnClick="OnToCultivationButtonClickedAsync">
            Atualizar Status Para Cultivo
        </MudButton>
        
        <MudButton FullWidth="true" Size="Size.Large" EndIcon="@Icons.Material.TwoTone.Block" Color="Color.Error" Variant="Variant.Outlined" OnClick="OnCancelButtonClickedAsync">
            CANCELAR PRODUÇÃO
        </MudButton>
        break;

    case EProductionStatus.Cultivation:
        <MudButton Class="mb-4" Size="Size.Large" EndIcon="@Icons.Material.TwoTone.NextPlan" FullWidth="true" Color="Color.Info" Variant="Variant.Filled" OnClick="OnToHarvestButtonClickedAsync">
            ATUALIZAR STATUS PARA COLHEITA
        </MudButton>
        
        <MudButton FullWidth="true" Size="Size.Large" EndIcon="@Icons.Material.TwoTone.Block" Color="Color.Error" Variant="Variant.Outlined" OnClick="OnCancelButtonClickedAsync">
            CANCELAR PRODUÇÃO
        </MudButton>
        break;
        
        case EProductionStatus.Harvesting:
        <MudButton Class="mb-4" FullWidth="true" EndIcon="@Icons.Material.TwoTone.Check" Size="Size.Large" Color="Color.Success" Variant="Variant.Outlined" OnClick="OnFinishButtonClickedAsync">
            FINALIZAR PRODUÇÃO
        </MudButton>        
        
        <MudButton FullWidth="true" Size="Size.Large" EndIcon="@Icons.Material.TwoTone.Block" Color="Color.Error" Variant="Variant.Outlined" OnClick="OnCancelButtonClickedAsync">
            CANCELAR PRODUÇÃO
        </MudButton>
        break;
        
        case EProductionStatus.CropLoss:
            <MudChip T="string" Style="width: 100%" Color="Color.Error" Icon="@Icons.Material.TwoTone.Block" Size="Size.Large">Produção Perdida</MudChip>
        break;
        
        
        default:
        <MudText></MudText>
        break;
}
